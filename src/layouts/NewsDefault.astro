---
import { formatDate } from '@scripts/date';
import SingleColumn from './SingleColumn.astro';

const {
  frontmatter: {
    author,
    date: rawDate,
    title,
  }
} = Astro.props;

const date = formatDate(rawDate);
---

<SingleColumn metaTitle={title} pageTitle={title} contentLayout="sidebar-right">
  <strong>
    News | { date } by {author}
  </strong>
  <hr />
  <slot />
</SingleColumn>
