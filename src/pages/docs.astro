---
import Layout from '@layouts/SingleColumn.astro';
import DocsList from '@components/DocsList.astro';
import { SITE } from '@/config/site';

const layoutProps = {
  metaTitle: "Documents & Resources | Epsilon Zeta Alumni Association",
  pageTitle: "Documents & Resources",
  description: "View minutes, bylaws, presentations, and other resources from the Epsilon Zeta Alumni Association.",
  canonical: `${SITE.url}/docs`,
};
---

<Layout {...layoutProps}>
  <p>We post all meeting minutes and general resources here. Check back regularly for updates.</p>
  <DocsList />
</Layout>
